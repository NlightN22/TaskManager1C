<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NotEditableTextInput">
        <item name="android:enabled">false</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:backgroundTint">@color/not_editable_text_background</item>
        <item name="android:textColorHint">@color/title_not_editable</item>
    </style>
    <style name="EditTextNotEditable">
        <item name="android:backgroundTint">@color/not_editable_text_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginBottom">-15dp</item>
        <item name="android:layout_marginTop">-17dp</item>
<!--        <item name="android:enabled">false</item>-->
        <item name="android:textColor">@color/not_editable_text</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TitleNotEditable" parent="EditTextNotEditable">
        <item name="android:textColor">@color/edit_text_top_hint</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">150</item>
        <item name="android:maxLines">3</item>
    </style>

</resources>