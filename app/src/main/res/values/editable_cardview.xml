<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditableCardView" parent="CardViewGlobal">
        <item name="android:backgroundTint">@color/editable_text_background</item>
        <item name="strokeWidth">@dimen/editable_card_stroke_width</item>
        <item name="strokeColor">@color/button_not_pressed</item>
    </style>
    <style name="EditableTextInput">
        <item name="android:enabled">true</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:backgroundTint">@color/editable_text_background</item>
        <item name="android:textColorHint">@color/editable_text</item>
    </style>
    <style name="EditTextEditable">
        <item name="backgroundTint">@color/editable_text_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_marginTop">-17dp</item>
        <item name="android:textColor">@color/editable_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleEditable" parent="EditTextEditable">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">150</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

</resources>